// @see http://eslint.org/docs/rules/ for rules definitions
// @see https://www.npmjs.com/package/eslint-plugin-angular for john pappa eslint angular rules
// To disable per file use /*eslint-disable ruleXYZ, ruleABC */
// To renable per file use /*eslint-enable ruleXYZ, ruleABC */
// To specify rule settings use /*eslint ruleXYZ: 0*/
// To disable per line basis use //eslint-disable-line ruleXYZ, ruleABC
{
	"extends": "eslint:recommended",
    // "extends": "airbnb-base/legacy",
	"parserOptions": {
		"ecmaVersion": 5,
		"sourceType": "script"
	},
	"env": {
		"browser": true,
		"jasmine": true
	},
	"globals": {
		"_": true,
		"$": true,
		"require": true,
        "Handlebars": true,
        "Backbone": true
	},
	"rules": {
		"no-alert": 2,
		"no-array-constructor": 2,
		"no-caller": 2,
		"no-catch-shadow": 2,
		"no-eval": 2,
		"no-extend-native": 2,
		"no-extra-bind": 2,
		"no-implied-eval": 2,
		"no-iterator": 2,
		"no-label-var": 2,
		"no-labels": 2,
		"no-lone-blocks": 2,
		"no-loop-func": 2,
		"no-multi-str": 2,
		"no-native-reassign": 2,
		"no-new": 2,
		"no-new-func": 2,
		"no-new-object": 2,
		"no-new-wrappers": 2,
		"no-octal-escape": 2,
		"no-process-exit": 2,
		"no-proto": 2,
		"no-return-assign": 2,
		"no-script-url": 2,
		"no-sequences": 2,
		"no-shadow": 2,
		"no-shadow-restricted-names": 2,
		"no-spaced-func": 2,
		"no-undef-init": 2,
		"no-underscore-dangle": [2, {"allow": ["_private"]}],
		"no-unused-expressions": 2,
		"no-unused-vars": 1,
		"no-with": 2,
		"no-unreachable": 2,
		"no-extra-semi": 1,
		"camelcase": 2,
		"comma-spacing": 2,
		"consistent-return": 1,
		"dot-notation": [2, { "allowKeywords": true }],
		"eol-last": 2,
		"no-extra-parens": [2, "functions"],
		"eqeqeq": 2,
		"key-spacing": [2, { "beforeColon": false, "afterColon": true }],
		"new-cap": 2,
		"new-parens": 2,
		"semi": 2,
		"semi-spacing": [2, {"before": false, "after": true}],
		"space-infix-ops": 2,
		"keyword-spacing": 2,
		"space-unary-ops": [2, { "words": true, "nonwords": false }],
		"yoda": [2, "never"],
		"curly": [2, "multi-line"],
		"no-use-before-define": [2, "nofunc"],
		"no-console": 1,
		"quotes": [1, "single", "avoid-escape"],
		"indent": ["error", 4],
		"no-mixed-spaces-and-tabs": [1, "smart-tabs"],
		"no-multi-spaces": [1, {"exceptions": { "Property": true }}],
		"no-trailing-spaces": [1, {"skipBlankLines": true}],
		"comma-style": [2, "last"],
        "comma-dangle": [2, "only-multiline"],
		"strict": [2, "function"]
	}
	// "plugins": ["backbone"]
}
